---
import { Image } from "astro:assets";
import { Button, Header } from "@fod/ui/components";
import logo from "../assets/images/FOD-logo-white.png";
import { Breadcrumbs } from "astro-breadcrumbs";

import "@fod/ui/styles.css";
import "../styles/tailwind.css";
import "astro-breadcrumbs/breadcrumbs.css";

export type BreadcrumbItem = {
  text: string;
  href: string;
  "aria-current"?: string;
}

interface Props {
    title: string;
    breadcrumbs?: Array<BreadcrumbItem>;
}

const { breadcrumbs = [], title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Header
            client:load
            menuItems={[
                { label: "Home", path: "/" },
                { label: "Programs", path: "/programs" },
                { label: "About", path: "/about" },
            ]}>
            <Image slot="logo" loading="eager" src={logo} alt="FOD logo" class="my-2 w-24" />
        </Header>
        {
            breadcrumbs.length > 0 && (
                <div class="bg-gray-300 py-2">
                    <div class="px-12 text-sm font-semibold text-gray-700 md:container md:mx-auto">
                        <Breadcrumbs crumbs={breadcrumbs} truncated={true}>
                            <svg
                                slot="ellipsis"
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round">
                                <>
                                    <circle cx="12" cy="12" r="1" />
                                    <circle cx="19" cy="12" r="1" />
                                    <circle cx="5" cy="12" r="1" />
                                </>
                            </svg>
                            <svg
                                slot="separator"
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round">
                                <polyline points="9 18 15 12 9 6" />
                            </svg>
                        </Breadcrumbs>
                    </div>
                </div>
            )
        }
        <main>
            <slot />
        </main>
        <div class="footer">
            <div class="footer__content">
                <div class="my-12 flex flex-col justify-between gap-12 text-xs sm:flex-row">
                    <div>
                        <h6 class="font-bold">Sitemap</h6>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li><a href="/about">About</a></li>
                            <li><a href="/programs">Programs</a></li>
                        </ul>
                    </div>
                    <div class="sm:text-center">
                        <h6 class="font-bold">Friends of Donegal</h6>
                        <ul>
                            <li>Copyright 2023</li>
                            <li><a href="/about#501c3">501(C)3 Information</a></li>
                        </ul>
                    </div>
                    <div>
                        <Button variant="tertiary">Donate</Button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>

<style>
    body {
        @apply grid min-h-screen grid-rows-[auto,1fr,auto] bg-gray-50;
    }

    .footer {
        @apply bg-gray-200 text-gray-800 shadow-inner;
    }

    .footer .footer__content {
        @apply px-12 md:container md:mx-auto;
    }
</style>
