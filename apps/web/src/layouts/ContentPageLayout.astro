---
import Layout from "src/layouts/Layout.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <div class="main">
        <slot />
    </div>
</Layout>

<style>
    body {
        @apply gap-12;
    }

    .main {
        @apply px-12 md:container md:mx-auto;
    }
</style>
