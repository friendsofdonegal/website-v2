---
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";
import { cva, cx, type VariantProps } from "class-variance-authority";
import { Image } from "astro:assets";

const heroBlock = cva(
    ["w-full", "flex", "flex-col", "lg:items-center ", "lg:items-stretch", "shadow-sm", "mb-2"],
    {
        variants: {
            imagePosition: {
                left: "lg:flex-row",
                right: "lg:flex-row-reverse",
            },
        },
    },
);

export interface Props extends HTMLAttributes<"div">, VariantProps<typeof heroBlock> {
    image?: ImageMetadata;
    imageAltText?: string;
    imageClass?: string[];
}

const {
    image,
    imageAltText,
    imagePosition = "left",
    imageClass = ["h-full","object-center"]
} = Astro.props;
---

<div class={heroBlock({ imagePosition })}>
    <div class="w-full flex-shrink lg:w-2/3">
        {
            image && (
                <Image
                    src={image}
                    alt={imageAltText}
                    width="1960"
                    class={cx(["w-full", "object-cover", ...imageClass])}
                />
            )
        }
    </div>
    <div class="w-full flex-1 lg:w-1/3">
        <slot />
    </div>
</div>
