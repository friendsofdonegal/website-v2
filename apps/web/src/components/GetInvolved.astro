---
import { generateDonationUrl } from "@components/DonateButton.astro";
import { Link } from "@fod/ui/components";
import type { Program } from "../content/config.ts";

interface Props {
  source: string;
  program: Program;
  class?: string;
}

const { source, program, class: classOverride } = Astro.props;
---

<div class={`get-involoved ${classOverride}`}>
  <div class="get-involved__card">
    <h3 class="mt-0">Volunteer</h3>
    <div class="flex flex-col justify-between">
      <p class="mt-0">
        We are always looking for new members to join our team. Find out how you can help out.
      </p>
      <div>
        <Link href={`/contact-us?source=${source}`}>I WANT TO HELP</Link>
      </div>
    </div>
  </div>
  <div class="get-involved__card">
    <h3 class="mt-0">Funding & Sponsorship</h3>
    <div class="flex flex-col justify-between">
      <p class="mt-0">
        We are always looking for new members to join our team. Find out how you can help out.
      </p>
      <div><Link href={generateDonationUrl(program)}>DONATE</Link></div>
    </div>
  </div>
</div>
<style>
  .get-involoved {
    @apply grid
            grid-cols-1
            gap-6
            sm:grid-cols-2;
  }

  .get-involved__card {
    @apply rounded-lg
            border
            border-gray-200
            bg-white p-4
            pb-6
            shadow-md;
  }
</style>
